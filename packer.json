{
  "variables": {
    "project_id": "",
    "k3s_version": "",
    "k3s_tag": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{ user `project_id` }}",
      "source_image_family": "ubuntu-minimal-1910",
      "machine_type": "n1-standard-4",
      "zone": "europe-west1-b",
      "ssh_username" : "root",
      "disk_size": "20",
      "image_name": "k3s-{{ user `k3s_version` | clean_resource_name }}"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/bootstrap",
      "source": "files",
      "type": "file"
    },
    {
      "type": "shell",
      "script": "bootstrap.sh",
      "environment_vars": [
        "K3S_VERSION={{ user `k3s_version` }}",
        "K3S_TAG={{ user `k3s_tag` }}"
      ]   
    }
  ]

}
